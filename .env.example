# AI Hedge Fund System Environment Variables
# Copy this file to .env and set your actual values

# Environment
ENVIRONMENT=development  # development, staging, production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_hedge_fund
DB_USER=postgres
DB_PASSWORD=your_password

# Production Database (if different)
PROD_DB_HOST=prod-db-server
PROD_DB_NAME=ai_hedge_fund_prod

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_api_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here

# Broker API Keys (for live trading - paper trading doesn't require these)
BROKER_API_KEY=your_broker_api_key_here
BROKER_SECRET_KEY=your_broker_secret_key_here

# AutoGen Configuration
AUTOGEN_MODEL=gpt-4-turbo-preview
AUTOGEN_TEMPERATURE=0.1
AUTOGEN_MAX_TOKENS=2000
AUTOGEN_TIMEOUT=60
AUTOGEN_MAX_AUTO_REPLY=3

# Trading Configuration
DEFAULT_POSITION_SIZE=10000  # USD
MAX_POSITION_SIZE=50000      # USD
MAX_PORTFOLIO_RISK=0.02      # 2%
MAX_SINGLE_POSITION_RISK=0.005  # 0.5%
COMMISSION_RATE=0.001        # 0.1%
SLIPPAGE_RATE=0.0005         # 0.05%

# Data Configuration
MARKET_DATA_PROVIDER=yahoo
FUNDAMENTAL_DATA_PROVIDER=alpha_vantage
CACHE_DURATION_MINUTES=5
MAX_CACHE_SIZE_MB=100

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_DIR=logs
LOG_FILE=logs/ai_hedge_fund.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Redis Configuration (for caching and message queuing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring and Alerting
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Security
SECRET_KEY=your_secret_key_for_jwt_tokens
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Paper Trading Configuration
PAPER_TRADING_ENABLED=true
PAPER_COMMISSION_PER_SHARE=0.005
PAPER_MIN_COMMISSION=1.0
PAPER_SLIPPAGE_BASE=0.001
PAPER_MARKET_IMPACT_FACTOR=0.0001
PAPER_LATENCY_MS=100

# Risk Management Overrides
MAX_POSITION_SIZE_PCT=0.05    # 5%
MAX_SECTOR_ALLOCATION_PCT=0.25  # 25%
MAX_PORTFOLIO_VAR_PCT=0.02    # 2%
MAX_DRAWDOWN_PCT=0.15         # 15%
MAX_CORRELATION=0.7           # 70%

# Backtesting Configuration
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2023-12-31
BACKTEST_INITIAL_CAPITAL=1000000
BACKTEST_COMMISSION=0.001

# Development Settings
DEBUG=true
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false

# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com